{
  "name": "@rshelekhov/sso-sdk",
  "version": "0.1.0",
  "description": "A TypeScript SDK for Single Sign-On (SSO) integration.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "module": "dist/index.js",
  "scripts": {
    "build": "bun build src/index.ts --outdir dist --target node && bunx tsc --noEmit false --emitDeclarationOnly",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write 'src/**/*.ts' 'tests/**/*.ts'",
    "format:check": "prettier --check 'src/**/*.ts' 'tests/**/*.ts'",
    "test": "bun test",
    "test:unit": "bun test tests/unit",
    "test:integration": "bun test tests/integration",
    "test:watch": "bun test --watch",
    "test:coverage": "bun test --coverage",
    "test:server:up": "docker-compose -f docker-compose.test.yml up -d",
    "test:server:down": "docker-compose -f docker-compose.test.yml down -v",
    "test:server:logs": "docker-compose -f docker-compose.test.yml logs -f sso",
    "test:full": "bun run test:server:up && sleep 30 && bun run test && bun run test:server:down",
    "prepublishOnly": "bun run typecheck && bun run build && bun run test:unit"
  },
  "keywords": [
    "sso",
    "authentication",
    "sdk",
    "typescript"
  ],
  "author": "Roman Shelekhov",
  "license": "MIT",
  "devDependencies": {
    "@faker-js/faker": "^10.1.0",
    "@trivago/prettier-plugin-sort-imports": "^6.0.0",
    "@types/bun": "^1.3.2",
    "msw": "^2.12.2",
    "prettier": "^3.6.2",
    "typescript": "^5.9.3"
  }
}
